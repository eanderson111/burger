
<div class="jumbotron">
  <h1>Marie Kondo It!</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-4">
            <h2>For donation:</h2>
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <li>{{burger_name}}</li>
	                <button type="submit" class="change-burger" data-id="{{this.id}}">DONATE ME</button>
                {{/if}}
            {{/each}}
            </ul> 
        </div>

        <div class="col-4">
        <h2>Enter items you no longer need</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Add an item:</label>
                    <input type="text" class="form-control" id="ca" name="name">
                </div>
                    <button type="submit" class="btn btn-primary">Add the item</button>
            </form>
        </div>

        <div class="col-4">
                    <h2>Final donation list:</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                       <li> {{burger_name}}</li>
                    {{/unless}}
                {{/each}}	
            </ul>
        </div>
    </div>
</div>