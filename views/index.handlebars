
<div class="jumbotron">
  <h1 class="display-4">Burger generator!</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-4">
            <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <p>{{burger_name}}</p>
	                <button class="change-burger" data-id="{{this.id}}">DEVOUR {{burger_name}}!</button>
                {{/if}}
            {{/each}}
            </ul> 
        </div>

        <div class="col-4">
        <h2>Add Your Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" class="form-control" id="ca" name="name">
                </div>
                    <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>

